<%= form_for @post, html: { class: 'form-horizontal', role: 'form'} do |f| %>

  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, :image => :notice, :title => "OverTime_app notification", :sticky => false) %>
    <% end %>
  <% end %>

  <div class="form-group">     
    <%= f.label :overtime_request, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.number_field :overtime_request, class: 'form-control', step: :any %>
    </div>
  </div>

  <div class="form-group">    
    <%= f.label :date, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.date_field :date, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">     
    <%= f.label :rationale, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_area :rationale, class: 'form-control' %>
    </div>
  </div>

  <%= render partial: 'status', locals: { f: f } if current_user.type == 'AdminUser' %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>