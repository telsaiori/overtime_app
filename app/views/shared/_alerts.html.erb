<% if flash[:error] %>
  <%= js add_gritter(flash[:error], :image => :notice, :title => "OverTime_app notification", :sticky => false) %>
<% elsif flash[:alert] %>
  <%= js add_gritter(flash[:alert], :image => :notice, :title => "OverTime_app notification", :sticky => false) %>
<% else %>
  <%= js add_gritter(flash[:notice], :image => :notice, :title => "OverTime_app notification", :sticky => false) %>
<% end %>