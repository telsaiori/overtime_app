<!DOCTYPE html>
<html>
  <head>
    <title>OvertimeApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <%= render partial: 'shared/nav' %>
          <%= yield %>
        </div>
      </div>
    </div>

    <%= js add_gritter(flash[:notice], :image => :notice, :title => "OverTime_app notification", :sticky => false) %>
  </body>
</html>
